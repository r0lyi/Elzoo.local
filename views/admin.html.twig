{% extends 'base.html.twig' %}

{% block content %}
<div class="container mt-4">
    {% if is_authenticated %}
        <h2 class="mb-4 text-success text-center">Panel de Administración</h2>

        <!-- Tabs de administración -->
        <ul class="nav nav-tabs" id="adminTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="usuarios-tab" data-bs-toggle="tab" data-bs-target="#usuarios" type="button" role="tab">Usuarios</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="animales-tab" data-bs-toggle="tab" data-bs-target="#animales" type="button" role="tab">Animales</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="foros-tab" data-bs-toggle="tab" data-bs-target="#foros" type="button" role="tab">Foros</button>
            </li>
        </ul>

        <div class="tab-content mt-4" id="adminTabsContent">
            <div class="tab-pane fade show active" id="usuarios" role="tabpanel">
                {% include 'admin/usuarios.html.twig' %}
            </div>
            <div class="tab-pane fade" id="animales" role="tabpanel">
                {% include 'admin/animales.html.twig' %}
            </div>
            <div class="tab-pane fade" id="foros" role="tabpanel">
                {% include 'admin/foros.html.twig' %}
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger text-center">
            No tienes acceso. <a href="/login" class="alert-link">Inicia sesión</a>.
        </div>
    {% endif %}
</div>
{% endblock %}
