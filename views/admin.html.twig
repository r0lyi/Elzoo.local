{% extends 'base.html.twig' %}

{% block title %}Panel de Administración - Zoológico{% endblock %}

{% block content %}
<div class="container mt-5">
    <header class="text-center mb-5 animate__animated animate__fadeInDown">
        <h1 class="display-4 fw-bold">Panel de Administración</h1>
        <p class="lead">Gestiona el contenido y usuarios del zoológico.</p>
    </header>

    <section class="admin-dashboard">
        <div class="row">
            <!-- Gestión de animales -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body text-center">
                        <h5 class="card-title">Gestión de Animales</h5>
                        <p class="card-text">Añade, edita o elimina animales en el sistema.</p>
                        <a href="/admin/animales" class="btn btn-primary">Administrar</a>
                    </div>
                </div>
            </div>

            <!-- Gestión de noticias -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body text-center">
                        <h5 class="card-title">Gestión de Noticias</h5>
                        <p class="card-text">Publica y edita noticias sobre el zoológico.</p>
                        <a href="/admin/noticias" class="btn btn-primary">Administrar</a>
                    </div>
                </div>
            </div>

            <!-- Gestión de adopciones -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body text-center">
                        <h5 class="card-title">Gestión de Adopciones</h5>
                        <p class="card-text">Revisa solicitudes de adopción y aprueba solicitudes.</p>
                        <a href="/admin/adopciones" class="btn btn-primary">Administrar</a>
                    </div>
                </div>
            </div>

            <!-- Gestión de usuarios -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body text-center">
                        <h5 class="card-title">Gestión de Usuarios</h5>
                        <p class="card-text">Administra cuentas de usuarios y permisos.</p>
                        <a href="/admin/usuarios" class="btn btn-primary">Administrar</a>
                    </div>
                </div>
            </div>

            <!-- Configuración del sitio -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body text-center">
                        <h5 class="card-title">Configuración del Sitio</h5>
                        <p class="card-text">Ajusta las configuraciones generales del sistema.</p>
                        <a href="/admin/configuracion" class="btn btn-primary">Administrar</a>
                    </div>
                </div>
            </div>

            <!-- Cerrar sesión -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm bg-danger text-white animate__animated animate__fadeInUp">
                    <div class="card-body text-center">
                        <h5 class="card-title">Cerrar Sesión</h5>
                        <p class="card-text">Salir del panel de administración.</p>
                        <a href="/logout" class="btn btn-light">Cerrar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
