{% extends 'base.html.twig' %}

{% block title %}Mi Perfil - MyZoo{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="row justify-content-center animate__animated animate__fadeInDown">
        <div class="col-md-8 col-lg-6">
            {# This is the core profile card content #}
            <div id="profile-card-content" class="card profile-card shadow-lg border-0">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="profile-avatar mb-4">
                        <i class="fas fa-user-circle fa-5x text-primary"></i> 
                    </div>

                    <h2 class="card-title display-6 fw-bold mb-3 text-dark">{{ usuario.nombre|capitalize }}</h2>
                    <p class="card-text text-muted mb-2">
                        <i class="fas fa-envelope me-2"></i>{{ usuario.email }}
                    </p>
                    <p class="card-text text-muted mb-4">
                        <i class="fas fa-user-tag me-2"></i>Tipo de Usuario: 
                        <span class="badge {{ usuario.rol == 'admin' ? 'bg-success' : 'bg-info' }} rounded-pill px-3 py-2">
                            {{ usuario.rol == 'admin' ? 'Administrador' : 'Usuario Regular' }}
                        </span>
                    </p>

                    <hr class="my-4">

                    <form action="/perfil" method="POST">
                        <button type="submit" class="btn btn-danger btn-lg w-100 logout-btn">
                            <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesi√≥n
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #e0f2f7;
        font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        color: #333;
    }
    .profile-card {
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    }
    .profile-avatar .fa-user-circle {
        color: #007bff;
    }
    .card-title {
        color: #212529;
        font-size: 2.5rem;
    }
    .card-text .fa-envelope, .card-text .fa-user-tag {
        color: #6c757d;
    }
    .badge.bg-success {
        background-color: #28a745 !important;
        color: white;
    }
    .badge.bg-info {
        background-color: #17a2b8 !important;
        color: white;
    }
    .logout-btn {
        background-color: #dc3545;
        border-color: #dc3545;
        font-weight: 600;
        border-radius: 0.75rem;
        padding: 0.75rem 1.5rem;
        transition: background-color 0.2s, transform 0.2s;
    }
    .logout-btn:hover {
        background-color: #c82333;
        border-color: #bd2130;
        transform: translateY(-2px);
    }
    .animate__animated {
        animation-duration: 0.8s;
        animation-fill-mode: both;
    }
    @media (max-width: 767.98px) {
        .profile-avatar .fa-5x {
            font-size: 4rem;
        }
        .card-title.display-6 {
            font-size: 2rem;
        }
        .card-text {
            font-size: 0.9rem;
        }
        .badge {
            font-size: 0.8rem !important;
            padding: 0.5rem 1rem !important;
        }
        .logout-btn {
            font-size: 1rem;
            padding: 0.6rem 1.2rem;
        }
    }
</style>
{% endblock %}