{% extends 'base.html.twig' %}

{% block title %}{{ foro.titulo }} – Foro{% endblock %}

{% block content %}
<div class="container mt-5">
  <article class="card shadow-sm mb-5">
    <div class="card-body">
      <h2 class="card-title">{{ foro.titulo }}</h2>
      <p class="text-muted">
        Publicado por <strong>{{ foro.autor_nombre }}</strong>
        el {{ foro.fecha_creacion|date('d/m/Y H:i') }}
      </p>
      <div class="mt-4">
        {{ foro.contenido|nl2br }}
      </div>
    </div>
  </article>

  <section class="add-comment mb-5 card shadow-sm border-0 animate__animated animate__fadeIn">
    {# ... (card header) ... #}
    <div class="card-body p-4">
        {% if is_authenticated %}
            {# Form action correctly points to the current forum's detail URL #}
            <form action="/foros/{{ foro.id }}" method="POST">
                <div class="mb-3">
                    <label for="contenidoComentario" class="form-label fw-bold">Tu Comentario</label>
                    <textarea
                        id="contenidoComentario"
                        name="contenido" {# This name is crucial for $_POST['contenido'] #}
                        class="form-control"
                        rows="4"
                        placeholder="Escribe tu comentario aquí..."
                        required
                    ></textarea>
                </div>
                <button type="submit" class="btn btn-success btn-lg w-100">
                    <i class="fas fa-paper-plane me-2"></i> Publicar Comentario
                </button>
            </form>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                Para comentar, por favor <a href="/login" class="alert-link fw-bold">inicia sesión</a>.
            </div>
        {% endif %}
    </div>
</section>

  {% if is_authenticated %}
    <section class="crear-comentario mb-5">
      <h4 class="mb-3">Añadir comentario</h4>
      <form action="/forum/{{ foro.id }}/comentario" method="POST">
        <div class="mb-3">
          <textarea
            name="contenido"
            class="form-control"
            rows="4"
            placeholder="Tu comentario..."
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Comentar</button>
      </form>
    </section>
  {% else %}
    <div class="alert alert-warning">
      Debes iniciar sesión para comentar.
    </div>
  {% endif %}
</div>
{% endblock %}
