{% extends '/components/base.twig' %}

{% block title %}Animales del Zoológico{% endblock %}

{% block styles %}
    {{ parent() }}
    <!-- Enlace a Animate.css para animaciones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- Estilos adicionales específicos para esta vista -->
    <style>
        .animales-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
            justify-content: center;
        }
        .animal-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 250px;
            text-align: center;
            background: #fff;
        }
        .animal-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .animal-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .animal-card h3 {
            margin: 15px 0;
            font-size: 1.5em;
            color: #333;
        }
        .no-animales {
            text-align: center;
            font-size: 1.2em;
            color: #666;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 animate__animated animate__fadeInDown">Animales del Zoológico</h1>
        <div class="animales-container">
            {% for animal in animales %}
                <div class="animal-card animate__animated animate__fadeInUp">
                    <img src="{{ animal.imagen }}" alt="{{ animal.especie }}" class="img-fluid">
                    <h3>{{ animal.especie }}</h3>
                    <p class="text-muted">
                        <i class="fas fa-paw"></i> Descubre más sobre este animal.
                    </p>
                </div>
            {% else %}
                <p class="no-animales animate__animated animate__fadeIn">No hay animales disponibles en este momento.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <!-- Agrega scripts adicionales específicos para esta vista si es necesario -->
    <script>
        console.log("Vista de animales cargada correctamente.");
    </script>
{% endblock %}