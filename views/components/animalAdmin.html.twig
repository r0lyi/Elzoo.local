{# views/components/animalAdmin.html.twig #}
<div class="container-fluid">
    <h2 class="mb-4"><i class="fas fa-paw"></i> Gestión de Animales</h2>
    <hr>

    {# Mensaje de alerta para notificaciones #}
    <div id="animal-alert-message" class="alert d-none" role="alert"></div>

    {# Botones de acción #}
    <div class="mb-4 d-flex justify-content-end">
        <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#addAnimalModal"><i class="fas fa-plus"></i> Añadir Nuevo Animal</button>
        <button class="btn btn-secondary" id="refreshAnimalsBtn"><i class="fas fa-sync-alt"></i> Actualizar Listado</button>
    </div>

    {# Tarjeta para el listado de animales #}
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Listado de Animales</h5>
            <div class="input-group w-50">
                <input type="text" class="form-control" placeholder="Buscar animal por nombre, clase, etc." id="animalSearchInput">
                <button class="btn btn-outline-light" type="button" id="animalSearchBtn"><i class="fas fa-search"></i></button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Científico</th>
                            <th scope="col">Clase</th>
                            <th scope="col">Continente</th>
                            <th scope="col">Hábitat</th>
                            <th scope="col">Dieta</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="animalsTableBody">
                        {# Los datos de los animales se cargarán aquí con JavaScript #}
                        <tr>
                            <td colspan="9" class="text-center p-4">
                                <i class="fas fa-spinner fa-spin fa-2x"></i> Cargando animales...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            {# Paginación (si tu API la soporta) #}
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center" id="animalsPagination">
                    {# La paginación se generará con JavaScript #}
                </ul>
            </nav>
        </div>
    </div>

    {# Modal para Añadir Animal #}
    <div class="modal fade" id="addAnimalModal" tabindex="-1" aria-labelledby="addAnimalModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="addAnimalModalLabel"><i class="fas fa-plus-circle"></i> Añadir Nuevo Animal</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="addAnimalForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="addAnimalNombre" class="form-label">Nombre Común</label>
                                <input type="text" class="form-control" id="addAnimalNombre" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="addAnimalNombreCientifico" class="form-label">Nombre Científico</label>
                                <input type="text" class="form-control" id="addAnimalNombreCientifico" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="addAnimalClase" class="form-label">Clase</label>
                                <input type="text" class="form-control" id="addAnimalClase" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="addAnimalContinente" class="form-label">Continente</label>
                                <input type="text" class="form-control" id="addAnimalContinente" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="addAnimalHabitat" class="form-label">Hábitat</label>
                                <input type="text" class="form-control" id="addAnimalHabitat" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="addAnimalDieta" class="form-label">Dieta</label>
                                <input type="text" class="form-control" id="addAnimalDieta" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="addAnimalInformacion" class="form-label">Información</label>
                            <textarea class="form-control" id="addAnimalInformacion" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="addAnimalImagen" class="form-label">URL de la Imagen</label>
                            <input type="url" class="form-control" id="addAnimalImagen" placeholder="http://ejemplo.com/imagen.jpg" required>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="addAnimalPeso" class="form-label">Peso (kg)</label>
                                <input type="number" step="0.01" class="form-control" id="addAnimalPeso">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="addAnimalTamano" class="form-label">Tamaño (m)</label>
                                <input type="number" step="0.01" class="form-control" id="addAnimalTamano">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="addAnimalSabias" class="form-label">Dato Curioso (Sabías que...)</label>
                                <input type="text" class="form-control" id="addAnimalSabias">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="addAnimalFechaNacimiento" class="form-label">Fecha de Nacimiento (Opcional)</label>
                            <input type="date" class="form-control" id="addAnimalFechaNacimiento">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar Animal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {# Modal para Editar Animal #}
    <div class="modal fade" id="editAnimalModal" tabindex="-1" aria-labelledby="editAnimalModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title" id="editAnimalModalLabel"><i class="fas fa-edit"></i> Editar Animal</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="editAnimalForm">
                    <div class="modal-body">
                        <input type="hidden" id="editAnimalId">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editAnimalNombre" class="form-label">Nombre Común</label>
                                <input type="text" class="form-control" id="editAnimalNombre" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editAnimalNombreCientifico" class="form-label">Nombre Científico</label>
                                <input type="text" class="form-control" id="editAnimalNombreCientifico" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editAnimalClase" class="form-label">Clase</label>
                                <input type="text" class="form-control" id="editAnimalClase" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editAnimalContinente" class="form-label">Continente</label>
                                <input type="text" class="form-control" id="editAnimalContinente" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editAnimalHabitat" class="form-label">Hábitat</label>
                                <input type="text" class="form-control" id="editAnimalHabitat" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editAnimalDieta" class="form-label">Dieta</label>
                                <input type="text" class="form-control" id="editAnimalDieta" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="editAnimalInformacion" class="form-label">Información</label>
                            <textarea class="form-control" id="editAnimalInformacion" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="editAnimalImagen" class="form-label">URL de la Imagen</label>
                            <input type="url" class="form-control" id="editAnimalImagen" placeholder="http://ejemplo.com/imagen.jpg" required>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="editAnimalPeso" class="form-label">Peso (kg)</label>
                                <input type="number" step="0.01" class="form-control" id="editAnimalPeso">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editAnimalTamano" class="form-label">Tamaño (m)</label>
                                <input type="number" step="0.01" class="form-control" id="editAnimalTamano">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editAnimalSabias" class="form-label">Dato Curioso (Sabías que...)</label>
                                <input type="text" class="form-control" id="editAnimalSabias">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="editAnimalFechaNacimiento" class="form-label">Fecha de Nacimiento (Opcional)</label>
                            <input type="date" class="form-control" id="editAnimalFechaNacimiento">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-info"><i class="fas fa-save"></i> Actualizar Animal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {# Modal de Confirmación para Eliminar Animal #}
    <div class="modal fade" id="deleteAnimalModal" tabindex="-1" aria-labelledby="deleteAnimalModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteAnimalModalLabel"><i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar al animal <strong id="deleteAnimalNameConfirm"></strong>?</p>
                    <p class="text-danger">Esta acción es irreversible y también puede afectar a otros datos relacionados.</p>
                    <input type="hidden" id="deleteAnimalIdConfirm">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteAnimalBtn"><i class="fas fa-trash-alt"></i> Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>

{# Este script se cargará dinámicamente con el componente #}
<script src="/js/animales.js"></script>