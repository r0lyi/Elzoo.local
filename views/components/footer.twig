        }).addTo(map);

        // Añadir marcador del Zoo
        L.marker([41.3879, 2.1849])
            .addTo(map)
            .bindPopup(`
                <strong>Zoo de Barcelona</strong><br>
                <em>¡Ven a visitarnos!</em>
                <img src="/images/zoo-marker.jpg" style="width: 100px; margin-top: 5px;">
            `)
            .openPopup();

        // Añadir controles de zoom
        L.control.zoom({ position: 'topright' }).addTo(map);
    </script>
